package com.dhaval.general;

import java.util.Scanner;

/**
 * @author Dhaval
 * USING ODD-EVEN VARIABLES METHOD
 */
public class HouseRobber {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		Scanner scn = new Scanner(System.in);
		
		System.out.println("Enter the number of elements in array: ");
		int arrSize = scn.nextInt(); 
		
		int arr[] = new int[arrSize];
		
		System.out.print("Enter "+ arrSize +" elements: ");
		
		for(int i = 0; i < arrSize; i++){
			arr[i] = scn.nextInt();
		}
		
		int result = houseRob(arr);
		
		System.out.println("Max. amount that can be robbed is: " + result);
	}

	public static int houseRob(int arr[]){
		if(arr.length == 0 || arr == null)
			return 0;
		
		/*if(arr.length == 1)
			return arr[0];*/
		
		int total[] = new int[2];
		total[0] = 0;
		total[1] = 0;
		for(int i = 0; i <= arr.length; i += 2){
			total[0] += arr[i];
		}
		for(int i = 1; i <= arr.length; i += 2){
			total[1] += arr[i];
		}
		
		int maxTotal = total[0] > total[1] ? total[0] : total[1];
		return maxTotal;
	}
}
